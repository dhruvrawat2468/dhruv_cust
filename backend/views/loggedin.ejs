<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Login</title>
        <meta name="description" content="Login to your account">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://cdn.tailwindcss.com"></script>
        <style>
            /* Custom styles for fine-tuning */
            body {
                background-color: #FFF8F0; /* Light orangish-white */
                font-family: 'Arial', sans-serif;
            }
        </style>
    </head>
    <body class="flex items-center justify-center min-h-screen">
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold text-center text-orange-800 mb-6">Login</h2>
            
            <form action="/auth/login" method="POST" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-orange-700">Email</label>
                    <input 
                        type="email" 
                        name="email" 
                        required 
                        class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                        placeholder="Enter your email"
                    >
                </div>

                <div>
                    <label class="block text-sm font-medium text-orange-700">Password</label>
                    <input 
                        type="password" 
                        name="password" 
                        required 
                        class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                        placeholder="Enter your password"
                    >
                </div>

                <button 
                    type="submit" 
                    class="w-full bg-orange-400 text-white font-bold py-2 rounded-md hover:bg-orange-500 focus:ring-2 focus:ring-orange-300 focus:ring-offset-2 transition-all"
                >
                    Login
                </button>
            </form>

            <p class="text-center mt-4 text-orange-700">
                Don't have an account? 
                <a href="/signup" class="text-orange-500 hover:underline">Sign up</a>
            </p>
        </div>
    </body>
</html>