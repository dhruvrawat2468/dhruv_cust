<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up</title>
    <meta name="description" content="Create your account">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #FFF8F0; /* Light orangish-white */
            font-family: 'Arial', sans-serif;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen">
    <div class="w-full max-w-lg p-8 bg-white rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-center text-orange-800 mb-6">Sign Up</h2>
        
        <form action="/auth/signup" method="POST" class="space-y-6">
            <!-- Name -->
            <div>
                <label class="block text-sm font-medium text-orange-700">Name</label>
                <input 
                    type="text" 
                    name="name" 
                    required 
                    minlength="3"
                    class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                    placeholder="Enter your name"
                >
            </div>

            <!-- Email -->
            <div>
                <label class="block text-sm font-medium text-orange-700">Email</label>
                <input 
                    type="email" 
                    name="email" 
                    required 
                    class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                    placeholder="Enter your email"
                >
            </div>

            <!-- Password -->
            <div>
                <label class="block text-sm font-medium text-orange-700">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    required 
                    minlength="6"
                    class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                    placeholder="Enter your password"
                >
            </div>

            <!-- Age -->
            <div>
                <label class="block text-sm font-medium text-orange-700">Age</label>
                <input 
                    type="number" 
                    name="age" 
                    required 
                    min="1"
                    class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                    placeholder="Enter your age"
                >
            </div>

            <!-- Gender -->
            <div>
                <label class="block text-sm font-medium text-orange-700">Gender</label>
                <select 
                    name="gender" 
                    required 
                    class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                >
                    <option value="" disabled selected>Select your gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <!-- Address Section -->
            <div class="space-y-4">
                <h3 class="text-lg font-semibold text-orange-800">Address Details</h3>
                
                <!-- Address -->
                <div>
                    <label class="block text-sm font-medium text-orange-700">Address</label>
                    <input 
                        type="text" 
                        name="address.address" 
                        required 
                        class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                        placeholder="Enter your address"
                    >
                </div>

                <!-- Landmark -->
                <div>
                    <label class="block text-sm font-medium text-orange-700">Landmark</label>
                    <input 
                        type="text" 
                        name="address.landmark" 
                        required 
                        class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                        placeholder="Enter a nearby landmark"
                    >
                </div>

                <!-- Pincode -->
                <div>
                    <label class="block text-sm font-medium text-orange-700">Pincode</label>
                    <input 
                        type="text" 
                        name="address.pincode" 
                        required 
                        pattern="[0-9]{6}"
                        class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                        placeholder="Enter 6-digit pincode"
                    >
                </div>

                <!-- House Number -->
                <div>
                    <label class="block text-sm font-medium text-orange-700">House Number</label>
                    <input 
                        type="text" 
                        name="address.houseNumber" 
                        required 
                        class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                        placeholder="Enter house number"
                    >
                </div>

                <!-- City -->
                <div>
                    <label class="block text-sm font-medium text-orange-700">City</label>
                    <input 
                        type="text" 
                        name="address.city" 
                        required 
                        class="w-full px-4 py-2 mt-1 text-orange-900 bg-orange-50 border border-orange-200 rounded-md focus:ring-2 focus:ring-orange-400 focus:border-orange-400 outline-none transition-all"
                        placeholder="Enter your city"
                    >
                </div>
            </div>

            <!-- Submit Button -->
            <button 
                type="submit" 
                class="w-full bg-orange-400 text-white font-bold py-2 rounded-md hover:bg-orange-500 focus:ring-2 focus:ring-orange-300 focus:ring-offset-2 transition-all"
            >
                Sign Up
            </button>
        </form>

        <p class="text-center mt-4 text-orange-700">
            Already have an account? 
            <a href="/" class="text-orange-500 hover:underline">Login</a>
        </p>
    </div>
</body>
</html>